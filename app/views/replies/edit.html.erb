<h1 class="title is-2 has-text-grey">Editing Reply</h1>

<%= simple_form_for([@topic, @reply]) do |f| %>
<div class="field">
  <div class="control">
    <%= f.input :body, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
  </div>
</div>


<%= f.button :submit, 'Update reply', class:'button is-danger' %>

<% end %>
