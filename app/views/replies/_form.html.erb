<%= simple_form_for([@topic, @topic.replies.build], remote: true) do |f| %>


      <div class="field">
        <div class="control">
          <%= f.input :body, required: true, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
        </div>
      </div>

      <%= f.button :submit, class: 'btn btn-dark' %>
<% end %>
