  <div class="category-content">
    <br>
    <h3 class="pt1 title is-5"><%= link_to category.title, category %></h3>
    <% if user_signed_in? %>
    <%= link_to "Edit category: #{category.title}", edit_category_path(category), class: 'button is-danger' %>
    <%= link_to 'Delete', category, class:'button is-danger', method: :delete, data: { confirm: "Are you sure you want to delete this category? " } %>
  <% end %>
  </div>
